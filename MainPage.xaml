<Page
    x:Class="Transhef.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Transhef"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <Page.Resources>
        <local:ReverseBooleanConverter
            x:Key="ReverseBoolean" />
    </Page.Resources>
    <Grid
        x:Name="MainPanel">
        <Rectangle
            x:Name="TTB"
            VerticalAlignment="Top"
            Canvas.ZIndex="9999"
            Fill="Transparent"
            Height="40" />
        <Grid
            x:Name="TTBContent"
            Height="48"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="40" />
                <ColumnDefinition
                    Width="Auto" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Image
                x:Name="TitleBarIcon"
                Grid.Column="0"
                HorizontalAlignment="Center"
                Width="25"
                Height="25"
                Margin="8,0,0,0"
                Source="Assets/Square44x44Logo.scale-400.png" />
            <TextBlock
                x:Name="TitleBarTextBlock"
                Text="Transhef"
                FontSize="13"
                Grid.Column="1"
                VerticalAlignment="Center"
                Margin="10,0,0,0" />
        </Grid>
        <Grid
            x:Name="Content"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Margin="20,40,20,20">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="70" />
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="70" />
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="70" />
            </Grid.RowDefinitions>
            <Grid
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Grid.Column="0">
                    <AutoSuggestBox
                        x:Name="InputLanguageScroller"
                        Height="36"
                        VerticalContentAlignment="Center"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Width="300"
                        QueryIcon="Zoom"
                        PlaceholderText="Select an input language..."
                        IsEnabled="{Binding IsChecked, ElementName=AutoLanguage, Converter={StaticResource ReverseBoolean}}"
                        TextChanged="InputLanguageScroller_TextChanged">
                    </AutoSuggestBox>
                    <ToggleButton
                        x:Name="AutoLanguage"
                        Content="Select automatically" Height="36" Click="AutoLanguage_Click"/>
                </StackPanel>
            </Grid>
            <TextBox
                x:Name="inputBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Row="1"
                PlaceholderText="What would you like to translate?"
                BorderThickness="0"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                TextChanged="inputBox_TextChanged"
                IsSpellCheckEnabled="False"/>
            <Grid
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Grid.Row="2">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">
                    <AutoSuggestBox
                        x:Name="OutputLanguageScroller"
                        Height="36"
                        VerticalContentAlignment="Center"
                        BorderThickness="0"
                        Width="300"
                        QueryIcon="Zoom"
                        PlaceholderText="Select an output language..."
                        TextChanged="OutputLanguageScroller_TextChanged">
                    </AutoSuggestBox>
                </StackPanel>
            </Grid>
            <TextBox
                x:Name="outputBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Row="3"
                PlaceholderText="Your output will appear here..."
                BorderThickness="0"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                IsSpellCheckEnabled="False"
                IsReadOnly="True"/>
            <Grid
                Grid.Row="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button
                        Style="{StaticResource AccentButtonStyle}"
                        Click="Translate_Clicked"
                        Height="36">
                        <StackPanel
                            Orientation="Horizontal">
                            <FontIcon
                                Glyph="&#xE895;" />
                            <TextBlock
                                Text="Translate"
                                Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <CommandBar
                        DefaultLabelPosition="Right"
                        VerticalAlignment="Center"
                        OverflowButtonVisibility="Collapsed">
                        <AppBarButton
                            Icon="Copy"
                            Label="Copy"
                            Click="Copy_Clicked"
                            Margin="10,0,0,0"
                            ToolTipService.ToolTip="Copy"
                            Height="50"
                            VerticalContentAlignment="Center"/>
                        <AppBarButton
                            Margin="10,0,0,0"
                            Icon="Switch"
                            Label="Switch"
                            Height="50"
                            VerticalContentAlignment="Center"
                            Click="Switch_Clicked"
                            ToolTipService.ToolTip="Switch languages" />
                    </CommandBar>
                </StackPanel>
                <CommandBar 
                    Grid.Column="2"
                    DefaultLabelPosition="Collapsed">
                    <AppBarButton 
                        Label="History"
                        ToolTipService.ToolTip="History">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE81C;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton 
                      Label="Settings"
                      Icon="Setting"
                      ToolTipService.ToolTip="Settings"/>
                </CommandBar>
            </Grid>
        </Grid>
    </Grid>
</Page>